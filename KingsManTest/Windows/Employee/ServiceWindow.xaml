<Window x:Class="KingsManTest.Windows.Employee.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KingsManTest.Windows.Employee"
        mc:Ignorable="d"
        Title="ServiceWindow" Height="420"
        Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Grid.RowSpan="4">
            <Border.Background>
                <ImageBrush ImageSource="/Res/Background.png"
                            Stretch="UniformToFill"/>
            </Border.Background>
            <Border>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" 
                                         StartPoint="0.5,0" 
                                         Opacity="0.7">
                        <GradientStop Color="Black" 
                                      Offset="1"/>
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FF060606"/>
                        <GradientStop Color="White" 
                                      Offset="0.787"/>
                        <GradientStop Color="White" 
                                      Offset="0.357"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="10 0">
                    <Grid.Background>
                        <SolidColorBrush Color="White"
                                         Opacity="0.7"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Список услуг"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                    <Border Grid.RowSpan="1"
                            Grid.Row="2"
                            BorderThickness="0 0 0 3"
                            BorderBrush="DarkGray">
                        <ListView x:Name="LvService" 
                                  Grid.Row="2" 
                                  d:ItemsSource="{d:SampleData ItemCount=5}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                  HorizontalAlignment="Center">
                            <ListView.Background>
                                <ImageBrush ImageSource="{x:Null}"/>
                            </ListView.Background>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Border  BorderBrush="Black"
                                            BorderThickness="2"
                                            Width="430"
                                            Height="120"
                                            MaxHeight="250"
                                            CornerRadius="4">
                                            <Border.Background>
                                                <SolidColorBrush Color="White"
                                                             Opacity="0.6"/>
                                            </Border.Background>
                                            <StackPanel Orientation="Horizontal">
                                                <Border BorderBrush="Black"
                                                    BorderThickness="2"
                                                    Margin="10"
                                                    Height="97"
                                                    VerticalAlignment="Top" Width="109">
                                                    <Image Width="90"
                                                       Height="100">
                                                        <Image.Source>
                                                            <Binding Path="Image">
                                                                <Binding.TargetNullValue>
                                                                    <ImageSource>\Res\SuitIcon.png</ImageSource>
                                                                </Binding.TargetNullValue>
                                                            </Binding>
                                                        </Image.Source>
                                                    </Image>
                                                </Border>

                                                <StackPanel>
                                                    <TextBlock Text="{Binding ServiceName}"
                                                            FontSize="20"
                                                            Margin="3 5 0 3"
                                                           FontWeight="Bold"
                                                           TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Description}"
                                                           FontSize="15"
                                                           MaxWidth="213"
                                                           TextWrapping="Wrap"
                                                           FontStyle="Italic"
                                                           Margin="3"/>
                                                    <TextBlock Text="{Binding Price}"
                                                           FontSize="15"
                                                           FontWeight="Bold"
                                                           Margin="3"/>
                                                </StackPanel>

                                            </StackPanel>
                                        </Border>

                                        <WrapPanel HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0 0 15 10">
                                            <Button Name="BtnEditService"
                                                Width="20"
                                                    Height="20"
                                                    Background="{x:Null}"
                                                    BorderThickness="0"
                                                Click="BtnEditService_Click">
                                                <Image Source="/Res/EditButton.png"/>
                                            </Button>
                                            <Button x:Name="BtnDeleteService"
                                                Width="25"
                                                    Height="26"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="{x:Null}"
                                                    BorderThickness="0"
                                                Click="BtnDeleteService_Click">
                                                <Image Source="/Res/DeleteButton.png"/>
                                            </Button>
                                            <Button x:Name="BtnAddServiceToCart"
                                                Width="22"
                                                    Height="25"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Background="{x:Null}"
                                                    BorderThickness="0"
                                                Click="BtnAddServiceToCart_Click">
                                                <Image Source="/Res/AddToCartButton.png"/>
                                            </Button>
                                        </WrapPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                    <Button x:Name="BtnBack"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Left"
                            Width="50"
                            Height="25"
                            Content="Назад"
                            Margin="10 0 0 8"
                            Click="BtnBack_Click"
                            Grid.Row="3"
                            Background="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="9"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <WrapPanel Grid.Row="3"
                               HorizontalAlignment="Right">
                        <Button x:Name="BtnAddService"
                            Grid.Row="3"
                            HorizontalAlignment="Right"
                            Width="35"
                            Background="{x:Null}"
                            Margin="0 3 5 0"
                            BorderThickness="0"
                            Click="BtnAddService_Click">
                            <Image Source="\Res\AddService.png"/>
                        </Button>
                        <Button x:Name="BtnGoToCart"
                            Grid.Row="3"
                            HorizontalAlignment="Right"
                            Width="30"
                            Background="{x:Null}"
                            Margin="0 0 10 0"
                            BorderThickness="0"
                            Click="BtnGoToCart_Click">
                            <Image Source="/Res/CartButton.png"/>
                        </Button>
                    </WrapPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
